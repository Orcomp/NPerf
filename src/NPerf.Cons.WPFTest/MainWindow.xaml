<Window x:Class="NPerf.Cons.WPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        Title="NPerf Benchmark Test" Height="350" Width="525">
    <Grid Margin="0,0,252,40">
    	<Grid Margin="0,0,-253,-13">
    		<Grid.ColumnDefinitions>
    			<ColumnDefinition Width="0.5*"/>
    			<ColumnDefinition Width="0.5*"/>
    		</Grid.ColumnDefinitions>
    		<oxy:Plot x:Name="OxyPlotChartTime"/>
			<GridSplitter Width="4"></GridSplitter>
    		<oxy:Plot x:Name="OxyPlotChartMemory" Grid.Column="1"/>
    	</Grid>
    	<TextBox x:Name="OutputTextbox" Margin="8,0,-160,-36" TextWrapping="Wrap" VerticalAlignment="Bottom" Height="44"/>
    	<Button Content="Start Tests" HorizontalAlignment="Right" Height="21.96" Margin="0,0,-243,-36" VerticalAlignment="Bottom" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
